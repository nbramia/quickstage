{
  "name": "@quickstage/worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker API for QuickStage",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev --config ../../infra/wrangler.toml",
    "deploy": "wrangler deploy --config ../../infra/wrangler.toml",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:quick": "npx tsx src/test/run-tests.ts quick",
    "test:core": "npx tsx src/test/run-tests.ts core",
    "test:subscriptions": "npx tsx src/test/run-tests.ts subscriptions",
    "test:watch": "npx tsx src/test/run-tests.ts watch",
    "test:precommit": "npx tsx src/test/run-tests.ts precommit",
    "test:ci": "npx tsx src/test/run-tests.ts ci",
    "test-runner": "npx tsx src/test/run-tests.ts"
  },
  "dependencies": {
    "hono": "^4.4.7",
    "itty-router": "^4.0.23",
    "scrypt-js": "^3.0.1",
    "stripe": "^14.21.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250220.0",
    "@types/node": "^20.11.30",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "tsx": "^4.20.5",
    "typescript": "^5.4.3",
    "vitest": "^1.3.1",
    "wrangler": "^3.67.0"
  }
}
